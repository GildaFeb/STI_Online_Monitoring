    <!-- Button trigger modal Log in -->

    <button type="button" class="btn-get-started scrolltop " data-toggle="modal" data-target="#exampleModalLong">
        Login
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="#" class="sign-up-form">
                        <h5 class="modal-title" id="exampleModalLongTitle">Guest Login</h5>
                        <div class="input-field">
                            <i class="fas fa-user"></i>
                            <input type="text" placeholder="Username">
                        </div>

                        <div class="input-field">
                            <i class="fas fa-lock"></i>
                            <input type="password" placeholder="Password">
                        </div>
                        <input type="submit" class="btn solid" value="Login">
                    </form>
                    <div class="panels-container"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Button trigger modal Sign up -->
    <button type="button" class="btn-services scrollto" data-toggle="modal" data-target="#exampleModalCenter">
        Register
    </button>

    <!-- Modal -->
    <div class="modal fade" id="signUp" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header des">
                    <h3 class="modal-title" id="exampleModalLongTitle">Guest Sign in</h3>
                </div>
                <div class="modal-body">
                    <div class="container1">
                        <div class="form-container">
                            <div class="signup-signup">
                                <form action="#" class="sign-up-form">

                                    <div class="input-field">
                                        <i class="fas fa-user"></i>
                                        <input type="text" placeholder="Last Name">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-user"></i>
                                        <input type="text" placeholder="First Name">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-user"></i>
                                        <input type="text" placeholder="Middle Name">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-user"></i>
                                        <input type="text" placeholder="Suffix">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-user"></i>
                                        <input type="text" placeholder="Contact number">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-location-arrow"></i>
                                        <input type="text" placeholder="Address">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-venus-mars"></i>
                                        <input type="text" placeholder="Gender">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-envelope"></i>
                                        <input type="email" placeholder="Email">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-lock"></i>
                                        <input type="password" placeholder="Password" id="password">
                                    </div>

                                    <div class="input-field">
                                        <i class="fas fa-lock"></i>
                                        <input type="password" placeholder="Confirm Password" id="Confirm_password" onkeyup="check(this)">
                                    </div>
                                    <div class="alert">
                                        <error id="alert"></error>
                                    </div>

                                    <input type="submit" class="btn solid" value="Login">
                                    <p class="social-text">Insert Valid ID</p>
                                    <div class="files">
                                        <input type="file" id="file" accept="image/*">
                                        <label for="file">
                                            <i class="fas fa-image"></i> &nbsp;
                                            Choose a Photo
                                        </label>
                                    </div>
                                </form>

                            </div>
                        </div>
                        <div class="panels-container"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn solid" data-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
